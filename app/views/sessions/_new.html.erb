<h2>Login</h2>

<% if flash[:alert] %>
	<p id="notice" ><%= flash[:alert] %></p>
<% end %>

<%= form_tag(sessions_path) do %>
<fieldset>
	<div>
		<label for="Email" >Email</label>
		<%= text_field_tag :email, params[:email] %>
	</div>
	<div>
		<label for="password" >Password</label>
		<%= password_field_tag :password, params[:password] %>
	</div>
	<div>
		<%= submit_tag "Login" %>
	</div>
</fieldset>
<% end %>


