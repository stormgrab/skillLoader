<h2>Sign Up</h2>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="signup">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  <div class="signup">
    <%= f.label :password %><br />
    <%= f.password_field :new_password %>
  </div>
	<div class="signup">
    <%= f.label "Confirm Password" %><br />
    <%= f.password_field :new_password_confirmation %>
  </div>
  <div class="signup">
		<%= f.check_box :terms_of_service %>    
		<%= f.label "I accept all terms and conditions"  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

