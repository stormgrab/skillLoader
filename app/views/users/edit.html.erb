<h1>Editing user</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email,:disabled=>true %>
  </div>
  <div class="field">
    <%= f.label "New Password" %><br />
    <%= f.password_field :new_password %>
  </div>
  <div class="field">
    <%= f.label :dob %><br />
    <%= f.date_select :dob %>
  </div>
  <div class="field">
    <%= f.label :dp_url %><br />
    <%= f.text_field :dp_url %>
  </div>
	<div class="field">
		<%= f.check_box :terms_of_service %>    
		<%= f.label "I accept all terms and conditions"  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
