<style type="text/css">
.blog_title{

	font-size: 20pt;
	font-weight: bold;

}
.blog_content{

	border: 4px solid gray;
	border-radius: 4px;
	line-height: 130%;
	margin-top: 4%;
	margin-left: 2%;
	margin-right: 2%;

}

</style>
<div class="span8 offset3">
<p id="notice"><%= notice %></p>

<p class="blog_title">
  
  <%= @post.title %>
</p>

<p class="blog_content">
  
  <%= @post.content %>
</p>

<p>
  <b>Vote:</b>
  <%= @post.vote %>
</p>

<p>
  <b>No Of Comments:</b>
  <%= @post.noOfComments %>
</p>


<%= link_to @user.email, user_path(@user) %> |
<%= link_to 'Edit', edit_post_path(@post) %> |
<% link_to 'Comment',new_post_comment_path(@post) %> |
<%= link_to 'Back', posts_path %>


</div>
